<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topPanel"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <fr.ganfra.materialspinner.MaterialSpinner
                            android:id="@+id/spin_item_type"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:popupBackground="#f0f0f0"
                            android:minHeight="@dimen/_10sdp"
                            app:ms_arrowColor="#000000"
                            android:fadeScrollbars="false"
                            app:ms_arrowSize="16dp"
                            app:ms_baseColor="@color/view"
                            app:ms_errorColor="@color/red"
                            app:ms_floatingLabelColor="@color/colorPrimary"
                            app:ms_typeface="lato.ttf"
                            app:ms_floatingLabelText="Select Item Type"
                            app:ms_hint="Item Type"
                            app:ms_hintColor="@color/colorPrimary"
                            app:ms_multiline="true" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <fr.ganfra.materialspinner.MaterialSpinner
                            android:id="@+id/spin_item_condition"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:popupBackground="#f0f0f0"
                            android:minHeight="@dimen/_10sdp"
                            app:ms_arrowColor="#000000"
                            android:fadeScrollbars="false"
                            app:ms_arrowSize="16dp"
                            app:ms_baseColor="@color/view"
                            app:ms_errorColor="@color/red"
                            app:ms_typeface="lato.ttf"
                            app:ms_floatingLabelColor="@color/colorPrimary"
                            app:ms_floatingLabelText="Select Item Conbdition"
                            app:ms_hint="Item Condition"
                            app:ms_hintColor="@color/colorPrimary"/>
                    </LinearLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edt_imei"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="IMEI/Serial"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="textCapSentences"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edt_battery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Battery Serial"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="textCapSentences"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edt_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Brand"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="textCapSentences"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_layout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edt_model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Model"
                            android:textSize="@dimen/_12sdp"
                            android:inputType="textCapSentences"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>




            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_submit"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@mipmap/big_arrow" />
    </LinearLayout>

</LinearLayout>