<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp"

        android:paddingLeft="@dimen/_35sdp"
        android:paddingTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_h_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Service No:"
                android:textColor="#292929"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txt_v_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="#01579B"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_h_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Name:"
                android:textColor="#292929"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txt_v_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="#01579B"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_h_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Register Date:"
                android:textColor="#292929"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txt_v_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="#01579B"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_h_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Device:"
                android:textColor="#292929"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txt_v_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="#01579B"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_h_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Model:"
                android:textColor="#292929"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txt_v_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="#01579B"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_h_imei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="IMEI:"
                    android:textColor="#292929"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txt_v_imei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="#01579B"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>






            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_h_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="Serial:"
                    android:textColor="#292929"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txt_v_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="#01579B"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/txt_h_prbm"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/_5sdp"
               android:text="Problem:"
               android:textColor="#292929"
               android:textSize="@dimen/_12sdp" />

           <TextView
               android:id="@+id/txt_v_prbm"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/_5sdp"
               android:text=""
               android:textColor="#01579B"
               android:textSize="@dimen/_12sdp" />
       </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_4sdp">


            <TextView
                android:id="@+id/txt_h_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textColor="#E65100"
                android:text="Status:" />


            <TextView
                android:id="@+id/txt_v_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textColor="#E65100"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Processing" />

            <ImageView
                android:id="@+id/img_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                />

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
               />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>