<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:background="@mipmap/header_dash"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


             <!--   <ImageView
                    android:id="@+id/img_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@mipmap/back_arrow"/>-->



                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/bg_color"
                    android:paddingBottom="@dimen/_7sdp"
                    android:text="MobiSq"
                    android:textSize="@dimen/_25sdp"/>
            </LinearLayout>




            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/bg_color"
                android:text="Dashboard"
                android:textSize="@dimen/_11sdp"/>
        </LinearLayout>


    </LinearLayout>



<LinearLayout
    android:id="@+id/dash_icons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:weightSum="3"
    android:orientation="horizontal"
    android:layout_below="@+id/head">


    <LinearLayout
        android:id="@+id/lnr_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/service_icon"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:text="Service"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lnr_placeorder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/place_order_dash"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:text="Place Order"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/exchange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/exchange_icon"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:text="Exchange"/>
    </LinearLayout>




</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dash_icons"
        android:layout_marginLeft="@dimen/_30sdp"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginTop="@dimen/_60sdp"/>


        <LinearLayout
            android:id="@+id/lnr_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/attendance_icon" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:text="Attendance"/>
        </LinearLayout>



    </LinearLayout>












    <LinearLayout android:id="@+id/bottom_menu"
android:layout_width="fill_parent"
android:layout_height="@dimen/_60sdp"
android:orientation="vertical"
android:gravity="center"
android:layout_alignParentBottom="true">


<TextView
    android:layout_width="match_parent"
    android:gravity="center"
    android:text="SQIndia"
    android:textSize="@dimen/_17sdp"
    android:layout_height="wrap_content" />

<TextView
    android:layout_width="match_parent"
    android:gravity="center"
    android:text="Version 1.1"
    android:textSize="@dimen/_8sdp"
    android:layout_height="wrap_content" />


<!-- menu bar -->
<!--   <include layout="@layout/footer_privacyplolicy" />-->
</LinearLayout>
    </RelativeLayout>